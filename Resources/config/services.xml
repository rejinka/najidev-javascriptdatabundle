<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="najidev.common.javascriptdata.container" class="NajiDev\Common\JavaScriptData\Container" />

        <service id="najidev.javascriptdata_bundle.templating.helper.javascriptdata"
                 class="NajiDev\JavaScriptDataBundle\Templating\Helper\JavaScriptDataHelper">
            <argument type="service" id="najidev.common.javascriptdata.container" />
            <tag name="templating.helper" alias="javascript_data" />
        </service>

        <service id="najidev.javascriptdata_bundle.filter_response_listener"
                 class="NajiDev\JavaScriptDataBundle\EventListener\AddContainerRequestListener">
            <argument type="service" id="najidev.common.javascriptdata.container" />
            <tag name="kernel.event_listener" event="kernel.response" method="onKernelResponse" />
        </service>

    </services>

</container>